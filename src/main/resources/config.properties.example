# ========================
# Database Config
# ========================
db.url=jdbc:sqlserver://{your_servername_here}:1433;databaseName=UTEShop;encrypt=true;trustServerCertificate=true
db.username=your_username_here
db.password=your_password_here

# ========================
# JWT Config
# ========================
jwt.signerKey=your_secret_here
jwt.expiration=3600000

# ========================
# User Roles
# ========================
users.role.user=USER
users.role.employee=EMPLOYEE
users.role.admin=ADMIN

# ========================
# User Token
# ========================
user_token.type.verify_email=1
user_token.type.reset_password=2

# ========================
# Attribute DataType
# ========================
attributes.datatype.text=1
attributes.datatype.number=2
attributes.datatype.boolean=3

# ========================
# Product Status
# ========================
product.status.inactive=0
product.status.active=1

# ========================
# Order Status Mapping
# ========================
orders.status.new=0
orders.status.confirmed=1
orders.status.shipping=2
orders.status.delivered=3
orders.status.canceled=4
orders.status.returned=5

# ========================
# Payment Status Mapping
# ========================
payment.status.unpaid=0
payment.status.paid=1
payment.status.refunded=2

# ========================
# Shipments Status Mapping
# ========================
shipments.status.preparing=0
shipments.status.picked=1
shipments.status.in_transit=2
shipments.status.delivered=3
shipments.status.failed=4

# ========================
# Payments Method Mapping
# ========================
payments.method.cod=0
payments.method.vnpay=1
payments.method.momo=2

# ========================
# Payments Status Mapping
# ========================
payments.status.pending=0
payments.status.success=1
payments.status.failed=2
payments.status.refunded=3

# ========================
# Vouchers Type Mapping
# ========================
vouchers.type.percent=1
vouchers.type.amount=2
vouchers.type.ship=3

# ========================
# Reviews Status Mapping
# ========================
reviews.status.hidden=0
reviews.status.visible=1

# ========================
# Review Media Type
# ========================
reviews.media_type.image=1
reviews.media_type.video=2
